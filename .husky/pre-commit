#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo "${BLUE}üöÄ Running pre-commit checks...${NC}"

# Check if there are staged files
if git diff --cached --quiet; then
  echo "${YELLOW}‚ö†Ô∏è  No staged files found. Skipping pre-commit checks.${NC}"
  exit 0
fi

# 1. Run lint-staged to check and fix staged files
echo "${BLUE}üìù Running lint-staged on staged files...${NC}"
if ! npx lint-staged; then
  echo "${RED}‚ùå lint-staged failed. Please fix the issues and try again.${NC}"
  exit 1
fi

# 2. Check if there are TypeScript files in staged changes
TS_FILES=$(git diff --cached --name-only --diff-filter=ACMR | grep -E '\.(ts|tsx|vue)$' || true)

if [ -n "$TS_FILES" ]; then
  echo "${BLUE}üîç TypeScript files detected. Running type check...${NC}"
  if ! npm run type-check; then
    echo "${RED}‚ùå TypeScript type check failed. Please fix the issues and try again.${NC}"
    exit 1
  fi
else
  echo "${YELLOW}‚ÑπÔ∏è  No TypeScript files changed. Skipping type check.${NC}"
fi

# 3. Check for TODO/FIXME comments in staged files (optional warning)
TODO_COUNT=$(git diff --cached --name-only --diff-filter=ACMR | xargs grep -l "TODO\|FIXME" 2>/dev/null | wc -l || echo 0)
if [ "$TODO_COUNT" -gt 0 ]; then
  echo "${YELLOW}‚ö†Ô∏è  Warning: Found $TODO_COUNT file(s) with TODO/FIXME comments.${NC}"
fi

echo "${GREEN}‚úÖ Pre-commit checks passed!${NC}"
