#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Colors for output
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Get commit info
COMMIT_HASH=$(git rev-parse --short HEAD)
COMMIT_MSG=$(git log -1 --pretty=format:"%s")
BRANCH=$(git rev-parse --abbrev-ref HEAD)

echo "${GREEN}âœ… Commit successful!${NC}"
echo "${BLUE}ğŸ“ Hash: $COMMIT_HASH${NC}"
echo "${BLUE}ğŸ’¬ Message: $COMMIT_MSG${NC}"
echo "${BLUE}ğŸŒ¿ Branch: $BRANCH${NC}"

# Count files changed
FILES_CHANGED=$(git diff --name-only HEAD~1 HEAD | wc -l)
echo "${BLUE}ğŸ“Š Files changed: $FILES_CHANGED${NC}"

# Show next steps
echo "${YELLOW}ğŸ’¡ Next steps:${NC}"
echo "   â€¢ Review your changes: ${BLUE}git show${NC}"
echo "   â€¢ Push your changes: ${BLUE}git push${NC}"
echo "   â€¢ View commit history: ${BLUE}git log --oneline -5${NC}"

# Check if this is the first commit
if [ "$(git rev-list --count HEAD)" = "1" ]; then
  echo "${GREEN}ğŸ‰ This is your first commit! Welcome to the project!${NC}"
fi
